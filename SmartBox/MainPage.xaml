<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SmartBox.MainPage">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Welcome to SmartBox" FontSize="24" />

            <Label x:Name="SmartBoxDisplay" FontSize="18" Text="Checking devices..." />

            <Entry x:Name="SSIDEntry" Placeholder="Wi-Fi SSID" />
            <Entry x:Name="PasswordEntry" Placeholder="Wi-Fi Password" IsPassword="True" />
            <Button Text="Send Wi-Fi Credentials" Clicked="OnSendWifiClicked" />
            <Label x:Name="WifiStatusLabel" Text="Status: " FontSize="16" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
